doctype html
html(lang="en")
 head
  meta(charset="utf-8")
  meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
  meta(name="description" content="Prince of Tarts is the best bakery in the Garden Route. You are able to custom order or come into our shop on Hibernia street. Enjoy sweet treats as well as savoury. Only the best!")
  meta(name="keywords" content="prince of tarts, bakery garden route, bakery, garden route coffee, george coffee, george bakery, cakes, cake george, cakes george, cakes garden route")
  link(rel="icon" type="image" href="https://res.cloudinary.com/dvwsiufhl/image/upload/q_auto,dpr_auto,w_0.25/v1602247579/PrinceofTarts/logo-black_g0gkfc.png")
  title #{ title }
  style.
        * {
            margin: 0;
            padding: 0;
        }

        body {
            background-color: black;
            color: white;
            font-family: Arial, Helvetica, sans-serif;
        }

        .whole-page-wrapper {
            display: flex;
            flex-direction: column;
            background: black;
        }

        .logo {
            display: flex;
            position: fixed;
            width: 100%;
            padding-top: 10vh;
            padding-bottom: 8vh; 
            justify-content: center;
            background: white;
            z-index: 1;
        }

        .logo img {
            height: 20vmax;
        }

        .empty {
            height: 35vmax;
        }

        main {
            background: black;
            height: 100%;
            z-index: 2
        }

        nav {
            display: flex;
            justify-content: center;
            margin-bottom: 2em;
            margin-top: 2em;
        }

        .nav-link {
            border-top: 2px solid white;
            border-bottom: 2px solid white;
            margin-left: 1em;
            margin-right: 1em;
            padding-top: 0.3em;
            padding-bottom: 0.3em;
            width: 12vw;
            text-align: center;
        }

        nav a {
            text-decoration: none;
        }

        nav a em{
            color: white;
            font-weight: 100;
        }

        section {
            background: black;
            z-index: 2;
        }
        
        .info-section-wrapper {
            height: 40vmax;
        }

        .info-section {
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-template-rows: 1fr 2fr;
            flex-wrap: wrap;
            width: 60%;
            margin: 0 auto;
            background: black;
        }

        .rounded-image img {
            grid-column: 1/2;
            width: 30vmax;
            position: relative;
            right: 1rem;
            background: black;
        }

        .info-description {
            grid: 2/2/2/2;
            display: flex;
            flex-direction: column;
            text-align: justify;           
        }

        .info-title {
            font-size: 4vw;
        }

        .social-media-wrapper {
            display: flex;
            justify-content: center;
            position: relative;
            bottom: 5em;
            width: 100%;
        }

        .social-media-content {
            display: flex;
            justify-content: center;
        }

        .social-media-block {
            margin: 1em;
            height: 5vmax;
            display: inline-block;
        }

        .social-media-block h2 {
            font-size: 2rem;
        }

        .image-grid-div {
            width: 95%;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-template-rows: repeat(3, 1fr);
            grid-column-gap: 0.5rem;
            grid-row-gap: 0.5rem;

        }

        .image-div img{
            width: 100%;
            margin: 0 auto;

        }

        @media screen and (max-width: 420px) {
            .social-media-wrapper {
                position: relative;
                bottom: 10em;
            }

            .social-media-block h2 {
                font-size: 1.5rem;
            }
            
        }

        @media screen and (max-width: 700px) {
            .rounded-image img {
            grid-column: 1/3;
            width: 30vmax;
            margin-top: 1em;
            position: relative;
            grid-row: 1;
            }

            .info-section-wrapper {
                position: relative;
                left: 1em;
                height: auto;
            }

            .info-description {
            grid-row: 2/3;
            display: flex;
            position: relative;
            right: 1em;
            flex-direction: column;
            }   

            .info-title h1 {
                margin-bottom: 0.5em;
                font-size: 10vw;
            }

            .nav-link{
                position: relative;
                width: 12vmax;
            }

            .info-title {
                text-align: center;
                margin-top: 1em;
                font-size: 5vw;
            }

            .image-grid-div {
                grid-template-columns: auto;
                grid-template-rows: auto;
            }
        }
    
        @media screen and (max-width: 768px) {
            .nav-link {
                position: relative;
                top: 2em;
                width: 12vmax;
                margin-bottom: 1em;
            }
            .rounded-image img {
                margin-top: 1em;
            }


        }

         @media screen and (max-width: 1280px) {
            .image-gallery-wrapper {
                position: relative;
                bottom: 4em;
            }
            .info-description {
                font-size: 1.2rem;
            }
        }


       